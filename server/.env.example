# Environment variables
NODE_ENV=development
PORT=5000

# Database (MongoDB Atlas) - add your own credentials & cluster
# Example format (do NOT commit real password):
# DATABASE_URL="mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE?retryWrites=true&w=majority&appName=blue"
DATABASE_URL="mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=blue"

# JWT Secret (generate a long random string for production)
JWT_SECRET="change-me-in-production"

# Frontend origin for CORS
CLIENT_URL=http://localhost:3000
